<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="dragableNode" prefHeight="70.0" prefWidth="80.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.DraggableNode">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <GridPane prefHeight="23.0" prefWidth="80.0" styleClass="node-overlay">
            <columnConstraints>
               <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
               <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="20.0" />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
               <Label fx:id="nodeLabel" alignment="CENTER" onDragDetected="#handleDragDetected" text="Label" />
               <Label fx:id="deleteNodeLabel" alignment="TOP_RIGHT" onMouseClicked="#handleNodeClosed" text="X" textAlignment="RIGHT" GridPane.columnIndex="1" />
            </children>
         </GridPane>
         <HBox prefHeight="60.0" prefWidth="80.0">
            <children>
               <AnchorPane maxWidth="-Infinity" minWidth="-Infinity" prefWidth="15.0" />
               <AnchorPane maxWidth="-Infinity" minWidth="-Infinity" prefWidth="60.0" />
               <AnchorPane maxWidth="-Infinity" minWidth="-Infinity" prefWidth="15.0" />
            </children>
         </HBox>
      </VBox>
   </children>
</AnchorPane>
